package switchClass;

public class mainClass {

	public static void main(String[] args) {
		/*
		 	switch : 조건문이지만, 값이 명확해야 한다.
		 		   : 큰 타이틀로 사용됨
		 		   : 사용빈도는 낮다.
		 	
		 	switch( 변수 ){		// 블럭문은 기본으로 넣어줘야된다
		 		case 변수값1:
		 			처리
		 			break;	탈출
		 		case 변수값2:
		 			처리2
		 			break;
		 		default:	else
		 			break;
		 	 }
		 	*/
			
		int number = 1;
		
		switch ( number ) {
			case 1:
				System.out.println("number = 1");
				break;
			case 2:
				System.out.println("number = 2");
				break;
			default:	//생략 가능
				System.out.println("number != 1 and number != 2");
				break;
		}
		
		// > < >= <= !  부등호 기호 사용불가
		
		char c = '가';
		switch( c ) {
			case '가':
				System.out.println("c = 가");
				break;
		}
		
		
		/*
		double d = 123.1;
		switch ( d ) {		// 소수점 사용 불가 
			case 123.1:
				break;
		}
		*/
		
		String str = "ABC";
		switch( str ) {
			case "ABC":
				System.out.println("str= "+ str);
				break;
		}
		
		
		/*
		switch(number) {
			case number > 2:
				break;
		}
		*/
		
		/*
		switch( process ){
			case CREATE:
				
				break:
			case PRINT:
				
				break:
			case RELEASE:
				
				break:
		}
		
		char c = '+';
		
		switch ( c ) {
			case '+':
				break;
		
		*/
		
		
		
	}

}
